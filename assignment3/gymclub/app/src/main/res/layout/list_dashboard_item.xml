<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_item"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        app:placeholderImage="@color/colorAccent"/>

    <TextView
        style="@style/GymClubText.Primary.large"
        android:id="@+id/txt_title"
        android:padding="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/xsmall_padding"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_avatar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            app:placeholderImage="@mipmap/ic_launcher_round"/>

        <TextView
            style="@style/GymClubText.Tertiary.Normal"
            android:id="@+id/txt_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="4dp"/>

        <TextView
            style="@style/GymClubText.Tertiary.Normal"
            android:id="@+id/txt_flavor"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/ic_call"/>
    </LinearLayout>

</LinearLayout>